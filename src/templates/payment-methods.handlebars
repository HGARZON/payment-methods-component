[class*="paymentmethod-large"] {
    background-image: url({{spritesheet.image}});
    background-size: {{spritesheet.px.width}} {{spritesheet.px.height}};
    height: 26px; /* most common height */
    margin: 5px;
}

[class*="paymentmethod-default"] {
    background-image: url({{spritesheet.image}});
    background-size: {{spritesheet.px.width}} {{spritesheet.px.height}};
    height: 26px; /* most common height */
    margin: 5px;
}

/*default*/
{{#sprites}}
  .paymentmethod-{{name}} {
      background-position: {{px.offset_x}} {{px.offset_y}};
      height: {{px.height}};
      width: {{px.width}};
  }
{{/sprites}}


/*large*/
{{#sprites}}
  .paymentmethod-{{name}}.paymentmethod-large {
      background-position: {{px.offset_x}} {{px.offset_y}};
      height: {{px.height}};
      width: {{px.width}};
  }
{{/sprites}}
