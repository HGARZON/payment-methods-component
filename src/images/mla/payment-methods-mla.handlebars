[class*="payment-methods-large"] {
        background-image: url(../images/pmc-mla.png);
        height: 26px; /* most common height */
        margin: 5px;
    
}
/*large*/
{{#sprites}}
.payment-methods-{{name}} {
        background-position: {{px.offset_x}} {{px.offset_y}};
        height: {{px.height}};
        width: {{px.width}};
    }

{{/sprites}}

{{#sprites}}
    {{class}}
        display: block
        position: relative
{{/sprites}}

@media (-webkit-min-device-pixel-ratio: 1.5), (min-resolution: 144dpi), (min-resolution: 1.5dppx)
    .payment-methods-{{name}}
            {{#retina}}
            background-image: url("{{{escaped_image}}}");
            background-size: {{px.total_width}} {{px.total_height}};
            {{/retina}}


{{#sprites}}
    {{class}}:before
        +sprite(${{name}})
{{/sprites}}